<Button>:
	color: [.31, .573, .816, .9]
	background_color: [0, 0, 0, 1]
	font_size:self.height/3
	canvas.after:
		Color:
            rgba: (.31, .573, .816, .9)
		Line:
			rounded_rectangle:
				( self.x+.1*self.width, self.y+.1*self.height, self.width-.2*self.width,self.height-.2*self.height,self.height/3)
			width: 2

<CalculatorWidget>:
	FloatLayout:
		size_hint: None,None
		size:root.calc_width,root.calc_height
		pos:root.center_x,root.center_y

		GridLayout:
			cols: 8
			pos:self.parent.pos
			Widget:
				Button:
					id: calc
					y: placeholder1.y
					x: self.parent.x
					width: self.parent.width +placeholder1.width*3
					height: self.parent.height +placeholde2.height*2
					text: ''
					font_size:self.height/5
			Widget:
				id:placeholde2
			Widget:
			Button:
				color: [0, 0, 1, 1]
				text: '<--'
				on_press: root.manager.current = "home"
			Button:
				text: '1'
				on_press: calc.text += '1'
			Button:
				text: '2'
				on_press: calc.text += '2'
			Button:
				text: '3'
				on_press: calc.text += '3'
			Button:
				text: '+/-'
				on_release: root.switch()
				color: [0, 0, 1, 1]
			Widget:
			Widget:
			Widget:
			Widget:
			Button:
				text: '4'
				on_press: calc.text += '4'
			Button:
				text: '5'
				on_press: calc.text += '5'
			Button:
				text: '6'
				on_press: calc.text += '6'
			Button:
				text: 'AC'
				on_release: root.clear()
				color: [0, 0, 1, 1]
			Widget:
				id:placeholder1
			Widget:
			Widget:
			Widget:
			Button:
				text: '7'
				on_press: calc.text += '7'
			Button:
				text: '8'
				on_press: calc.text += '8'
			Button:
				text: '9'
				on_press: calc.text += '9'
			Button:
				text: 'CE'
				on_release: root.delete()
				color: [0, 0, 1, 1]
			Button:
				text: '+'
				on_press: calc.text += '+'
			Button:
				text: '-'
				on_press: calc.text += '-'
			Button:
				text: '*'
				on_press: calc.text += '*'
			Button:
				text: '/'
				on_press: calc.text += '/'
			Button:
				text: '0'
				on_press: calc.text += '0'
			Button:
				text: '.'
				on_press: calc.text += '.'
			Widget:
				Button:
					pos: self.parent.pos
					height: self.parent.height
					width: self.parent.width * 2
					text: '='
					on_release: root.calculate()

			
