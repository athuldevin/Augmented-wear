#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<DrawBoard>:

    ScrollView:
        content: content
        do_scroll_x: False
        size_hint: 1, None
        padding: 20
        spacing: 20
        size: win.Window.size
        GridLayout:
            id: content
            cols: 3
            padding: 20
            spacing: win.Window.width * 0.05
            size_hint_y:None
            #height: self.minimum_height
            Widget:
                id:a
            Widget:
                id:b
            Button:
                id:c
                size_hint: 1, None
                size:100,75
                font_size:40
                text:"<<<"
                on_release:root.manager.current='home'
        
<Fold>:

    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.

    id: image
    source: root.source
    on_release:root.switch()
        
    
    size_hint: 1.5, None
    # create initial image to be 400 pixels width
    size: 300, 300 / self.image_ratio

    # add shadow background
    canvas.before:
        Color:
            rgba: 1,1,1,1
        BorderImage:
            source: '123.png'
            border: (36,36,36,36)
            size:(self.width+36, self.height+72)
            pos: (self.x-18,self.y-36)
    