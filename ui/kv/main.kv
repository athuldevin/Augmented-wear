#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	sm:screen_manager
	id:screen_manager
	transition: FadeTransition()
	Home:
	Calculator:
	
<Home>:
	name:"home"
	FloatLayout:
		MenuSpawner:
			timeout: .5
			menu_args:
				dict(
				creation_direction=-1,
				radius=50,
				creation_timeout=.4,
				choices=[
				dict(text='submenu 1', index=1, callback=app.callback1),
				dict(text='Calculator', index=2, callback=app.calculator),
				dict(text='action 2', index=3, callback=app.callback3),
				dict(text='submenu 2', index=4, callback=app.callback4),
				dict(text='Exit', index=5, callback=app.callback5),
				])
	Button:
		on_release: app.root.current = "calculator"
		text: "Calculator"
		size_hint: .2,.1
		pos_hint: {"right":1, "top":1}
	
<Calculator>:
	name:"calculator"
	Button:
		on_release: app.root.current = "home"
		text: "home"
	